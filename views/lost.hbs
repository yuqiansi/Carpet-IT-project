<main>
    <nav class = "navbar">
        <img class="nav-logo" src="imgs\logo.png">
        <ul class ="nav-links">
            <li><a href="/mypost"><b>My post</b></a></li>
            <li><a href="/guide"><b>Home</b></a></li>
            <li><a href="/found"><b>Selling</b></a></li>
            <li><a href="/report"><b>Report</b></a></li>
            <li><a href="/"><b>Logout</b></a></li>
            <li><a href="/aboutUs"><b>About us</b></a></li>
    </nav>

<div class="lost-container">
    <div class="lostHeader">
        <h1>Current Selling</h1>
    </div>
    <form action="" class="searchBar" method="post">
        <input type="text" placeholder="Search for find item" name = "searchFind">
        <button type="submit"><img src="imgs/search.png"</button>
    </form>
</div>

<div class="lost-block">
    {{#each dataRows}}
    <div class="lost-detail">
        <div class="lost-photo">
            <img class="updated-photo" src={{picture}}/>
        </div>

        <div class="lost-content">
            <div class= "lost-title">
                <h1>{{item}}</h1>

                <div class="info">
                    <img src="imgs\anonymous.png">
                    
                    <p>{{contactName}}</p>
                </div>

                <p>{{time}}</p>
                
            </div>

            <div class="detail">
                <div class="one-line">
                    <h1>Location: </h1>
                    <p>{{location}}</p>
                </div>
                <div class="one-line">
                    <h1>Description: </h1>
                    <p>{{description}}</p>
                </div>
                <div class="one-line">
                    <h1>Phone number: </h1>
                    <p>{{phoneNum}}</p>
                </div>
                <div class="one-line">
                    <h1>Email: </h1>
                    <p>{{email}}</p>
                </div>
            </div>
        
        </div>
        
    </div> 
    {{/each}}
    <div class="report-block">
        <a href="/report">
            <div class="report-icon">
            
                <img src="imgs\add.png">
            </div>
        </a>

        <a href="/report">
            <p>POST NEW ITEM</p>
        </a>
    </div>

</div>
</main>